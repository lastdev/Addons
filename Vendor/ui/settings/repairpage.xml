<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/..\FrameXML\UI.xsd">
	<Script file="ui/settings/repairpage.lua"/>

    <Frame name="Vendor_Settings_Repair" virtual="true" inherits="Vendor_Settings_Panel">
        <KeyValues>
            <KeyValue key="HelpTextLocKey" value="OPTIONS_DESC_REPAIR" type="string"/>
        </KeyValues>
        <Frames>
            <!-- Auto repair -->
            <Frame parentKey="AutoRepair" inherits="Vendor_Setting_Checkbox">
				<KeyValues>
					<KeyValue key="LabelLocKey" value="OPTIONS_SETTINGNAME_AUTOREPAIR" type="string"/>
					<KeyValue key="TextLocKey" value="OPTIONS_SETTINGDESC_AUTOREPAIR" type="string"/>
				</KeyValues>
                <Size x="250" y="54"/>
                <Anchors>
                    <Anchor point="TOPLEFT" relativeKey="$parent.HelpText" relativePoint="BOTTOMLEFT" x="0" y="-8"/>
                    <Anchor point="RIGHT" x="-16" />
                </Anchors>
            </Frame>

            <!-- Guild repair -->
		    <Frame parentKey="GuildRepair" inherits="Vendor_Setting_Checkbox">
				<KeyValues>
					<KeyValue key="LabelLocKey" value="OPTIONS_SETTINGNAME_GUILDREPAIR" type="string"/>
					<KeyValue key="TextLocKey" value="OPTIONS_SETTINGDESC_GUILDREPAIR" type="string"/>
				</KeyValues>
                <Size x="250" y="54"/>
                <Anchors>
                    <Anchor point="TOPLEFT" relativeKey="$parent.AutoRepair" relativePoint="BOTTOMLEFT" y="0"/>
                    <Anchor point="RIGHT" x="-16" />
                </Anchors>
            </Frame>        

        </Frames>
		<Scripts>
			<OnLoad>Vendor.LoadImplementation(self, "Settings", "Repair")</OnLoad>
		</Scripts>
    </Frame>
	
</Ui>