					<Anchors>
						<Anchor point="BOTTOMLEFT" relativePoint="BOTTOMLEFT" x="0" y="0" />
					</Anchors>
                    <TexCoords left="0" right="1" top="0" bottom="0.71875" />
				</Texture>
				<Texture name="$parentBotRightCover" file="Interface\AuctionFrame\UI-AuctionFrame-Bid-BotRight">
