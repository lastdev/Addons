<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\..\FrameXML\UI.xsd">

<!-- Copyright 2011-2020 Mike Battersby -->

<Frame name="LiteMountOptionsGeneral" hidden="true" inherits="LiteMountOptionsPanelTemplate">

    <KeyValues>
        <KeyValue key="name" value="GENERAL" type="string" />
    </KeyValues>

    <Frames>
        <CheckButton name="$parentCopyTargetsMount" parentKey="CopyTargetsMount" inherits="InterfaceOptionsCheckButtonTemplate">
            <Anchors>
                <Anchor point="TOP" relativeKey="$parent.Title" relativePoint="BOTTOM" y="-24" />
                <Anchor point="LEFT" x="24" />
            </Anchors>
            <Scripts>
                <OnLoad>
                    local L = LM_Localize
                    self.Text:SetText(L.LM_COPY_TARGETS_MOUNT)
                    self.SetOption = function (self, setting)
                            if not setting or setting == "0" then
                                LM_Options.db.profile.copyTargetsMount = false
                            else
                                LM_Options.db.profile.copyTargetsMount = true
                            end
                        end
                    self.GetOption = function (self)
                            return LM_Options.db.profile.copyTargetsMount
                        end
                    self.GetOptionDefault = function (self) return true end
                    LiteMountOptionsControl_OnLoad(self)
                </OnLoad>
                <OnClick function="LiteMountOptionsControl_OnChanged" />
            </Scripts>
        </CheckButton>
        <CheckButton name="$parentExcludeNewMounts" parentKey="ExcludeNewMounts" inherits="InterfaceOptionsCheckButtonTemplate">
            <Anchors>
                <Anchor point="TOPLEFT" relativeKey="$parent.CopyTargetsMount" relativePoint="BOTTOMLEFT" x="0" y="-8" />
            </Anchors>
            <Scripts>
                <OnLoad>
                    local L = LM_Localize
                    self.Text:SetText(L.LM_DISABLE_NEW_MOUNTS)
                    self.SetOption = function (self, setting)
                            if not setting or setting == "0" then
                                LM_Options.db.profile.excludeNewMounts = false
                            else
                                LM_Options.db.profile.excludeNewMounts = true
                            end
                        end
                    self.GetOptionDefault = function (self) return false end
                    self.GetOption = function (self)
                            return LM_Options.db.profile.excludeNewMounts
                        end
                    LiteMountOptionsControl_OnLoad(self)
                </OnLoad>
                <OnClick function="LiteMountOptionsControl_OnChanged" />
            </Scripts>
        </CheckButton>
        <CheckButton name="$parentDebugging" parentKey="Debugging" inherits="InterfaceOptionsCheckButtonTemplate">
            <Anchors>
                <Anchor point="TOPLEFT" relativeKey="$parent.ExcludeNewMounts" relativePoint="BOTTOMLEFT" x="0" y="-72" />
            </Anchors>
            <Scripts>
                <OnLoad>
                    local L = LM_Localize
                    self.Text:SetText(L.LM_ENABLE_DEBUGGING)
                    self.SetOption = function (self, setting)
                            if not setting or setting == "0" then
                                LM_Options.db.char.debugEnabled = false
                            else
                                LM_Options.db.char.debugEnabled = true
                            end
                        end
                    self.GetOptionDefault = function (self) return false end
                    self.GetOption = function (self)
                            return LM_Options.db.char.debugEnabled
                        end
                    LiteMountOptionsControl_OnLoad(self)
                </OnLoad>
                <OnClick function="LiteMountOptionsControl_OnChanged" />
            </Scripts>
        </CheckButton>
    </Frames>
</Frame>

</Ui>
