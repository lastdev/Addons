<Script file="ProfileDropDown.lua" />

<Button name="LiteMountOptionsProfileButton" inherits="UIMenuButtonStretchTemplate" hidden="true">
    <Size x="140" y="22" />
    <Layers>
        <Layer level="ARTWORK">
            <Texture name="$parentIcon" parentKey="Icon" file="Interface\ChatFrame\ChatFrameExpandArrow">
                <Size x="10" y="12"/>
                <Anchors>
                    <Anchor point="RIGHT" relativeKey="$parent.Right" relativePoint="RIGHT" x="-5"/>
                </Anchors>
            </Texture>
        </Layer>
    </Layers>

    <Scripts>
        <OnShow function="LiteMountOptionsProfileDropDown_OnShow" />
        <OnHide function="LiteMountOptionsProfileDropDown_OnHide" />
        <OnClick>
            ToggleDropDownMenu(1, nil, LiteMountOptionsProfileDropDown, self:GetName(), 74, 15)
        </OnClick>
    </Scripts>
</Button>

<Frame name="LiteMountOptionsProfileDropDown" inherits="UIDropDownMenuTemplate">
    <Scripts>
        <OnShow function="LiteMountOptionsProfileDropDown_OnLoad" />
    </Scripts>
</Frame>

</Ui>
