							</Anchors>
						</FontString>
						
						<FontString parentKey="UnlockText" inherits="GameFontHighlight" justifyH="LEFT">
							<Size x="190" y="0" />
							<Anchors>
								<Anchor point="TOPLEFT" relativeKey="$parent.Rank3Tooltip" relativePoint="BOTTOMLEFT" x="-10" y="-10" />
							</Anchors>
							<Color r="1.0" g="0.1" b="0.1" a="1"/>
						</FontString>
					</Layer>
				</Layers>
			</Frame>
		</Frames>
		<Scripts>
			<OnLoad>
				Altoholic:SetClassExtensions(self, "AltoTabGrids")
				
				local L = LibStub("AceLocale-3.0"):GetLocale("Altoholic")
				
				self.Label1:SetText(L["Realm"])
				self.Equipment.text = L["Equipment"]
				self.Factions.text = L["Reputations"]
				self.Archeology.text = GetSpellInfo(78670)
				self.Dailies.text = "Daily Quests"
				self.FollowerAbilities.text = format("%s/%s", GARRISON_RECRUIT_ABILITIES, GARRISON_RECRUIT_TRAITS)
				
				self.SelectRealm:RegisterClassEvent("RealmChanged", function()
						self.Status:SetText("")
						self:Update()
					end)
				
				self.ClassIcons.OnCharacterChanged = function()
						self:Update()
					end
					
				self.Equipment:StartAutoCastShine()
				self.currentGridID = 1
			</OnLoad>
			<OnShow>
				self:UpdateMenuIcons()
				self:Update()
			</OnShow>
		</Scripts>
	</Frame>
</Ui>
