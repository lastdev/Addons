	<Button name="AltoAltEquipmentTemplate" inherits="AltoItemButtonTemplate" virtual="true">
		<Scripts>
			<OnLoad>
				self:RegisterForClicks("LeftButtonDown", "RightButtonDown");
			</OnLoad>
			<OnEnter>
				Altoholic:Item_OnEnter(self)
			</OnEnter>
			<OnLeave>
				GameTooltip:Hide();
			</OnLeave>
			<OnClick>
				Altoholic:Item_OnClick(self, button)
			</OnClick>
		</Scripts>
	</Button>
	
