          <Frame name="$parentTalentRow7" inherits="ArmoryTalentRowTemplate" parentKey="tier7" id="7">
            <Anchors>
              <Anchor point="TOPLEFT" relativeTo="$parentTalentRow6" relativePoint="BOTTOMLEFT" x="0" y="3"/>
