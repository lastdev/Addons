<Ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns="http://www.blizzard.com/wow/ui/">
	<Script file="Help.lua"></Script>
	
	<Frame parentKey="Help" hidden="true">
		<Layers>
			<Layer level="ARTWORK">
				<FontString parentKey="Title" inherits="GameFontNormalLarge" justifyH="LEFT" justifyV="TOP">
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset>
								<AbsDimension x="16" y="-16"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
				<Texture parentKey="Separator">
					<Size x="600" y="1" />
					<Anchors>
						<Anchor point="TOPLEFT" x="10" y="-40" />
					</Anchors>
					<Color r="0.25" g="0.25" b="0.25"/>
				</Texture>
			</Layer>
			<Layer level="OVERLAY">
				<FontString parentKey="Content" inherits="GameFontNormal" justifyH="LEFT" justifyV="TOP">
					<Size x="610" />
					<Anchors>
						<Anchor point="TOPLEFT" x="10" y="-50" />
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Scripts>
			<OnLoad>
				Altoholic:BindViewToController(self, "AltoholicUI.TabOptions.Help")
			</OnLoad>
		</Scripts>
	</Frame>
</Ui>
