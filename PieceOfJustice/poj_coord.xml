<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ C:\Projects\WoW\Bin\Interface\FrameXML\UI.xsd">


<!-- coordinate window -->

<Frame name="PoJ_Coord" movable="true" topLevel="true" enableMouse="true" framestrata="BACKGROUND" parent="Minimap">
  <Size><AbsDimension x="80" y="24"/></Size>
  <Anchors>
    <Anchor point="TOP" relativePoint="BOTTOM"><Offset><AbsDimension y="-10"/></Offset></Anchor>
  </Anchors>
  <Backdrop bgFile="Interface\TutorialFrame\TutorialFrameBackground" edgeFile="Interface\DialogFrame\UI-DialogBox-Border" tile="true">
    <EdgeSize><AbsValue val="16"/></EdgeSize>
    <TileSize><AbsValue val="32"/></TileSize>
    <BackgroundInsets><AbsInset left="5" right="5" top="5" bottom="5"/></BackgroundInsets>
  </Backdrop>
  <Layers>
    <Layer level="BACKGROUND">
      <FontString name="PoJ_CoordString" inherits="GameFontNormalSmall">
        <Size><AbsDimension x="80" y="12"/></Size>
        <Anchors>
          <Anchor point="CENTER"/>
        </Anchors>
        <Color r="1" g="1" b="1"/>
      </FontString>
    </Layer>
  </Layers>
  <Scripts>
    <OnLoad>PoJ_UpdateFrame_Prepare(self)</OnLoad>
    <OnUpdate>PoJ_UpdateFrame_Update(self, elapsed, PoJ_CoordString, PoJ_GetPlayerCoordString)</OnUpdate>
  </Scripts>
</Frame>


<!-- world map coordinates -->

<Frame name="PoJ_MapPlayerCoord" parent="WorldMapFrame">
  <Size><AbsDimension x="100" y="24"/></Size>
  <Layers>
    <Layer level="BACKGROUND">
      <FontString name="PoJ_MapPlayerCoordString" inherits="GameFontNormal">
        <Size><AbsDimension x="100" y="16"/></Size>
        <Anchors>
          <Anchor point="CENTER"/>
        </Anchors>
        <Color r="1" g="1" b="1"/>
      </FontString>
    </Layer>
  </Layers>
  <Scripts>
    <OnLoad>PoJ_UpdateFrame_Prepare(self, 0.05)</OnLoad>
    <OnUpdate>PoJ_UpdateFrame_Update(self, elapsed, PoJ_MapPlayerCoordString, PoJ_GetPlayerCoordString)</OnUpdate>
  </Scripts>
</Frame>

<Frame name="PoJ_MapMouseCoord" parent="WorldMapFrame">
  <Size><AbsDimension x="100" y="24"/></Size>
  <Layers>
    <Layer level="BACKGROUND">
      <FontString name="PoJ_MapMouseCoordString" inherits="GameFontNormal">
        <Size><AbsDimension x="100" y="16"/></Size>
        <Anchors>
          <Anchor point="CENTER"/>
        </Anchors>
        <Color r="0.5" g="0.5" b="1"/>
      </FontString>
    </Layer>
  </Layers>
  <Scripts>
    <OnLoad>PoJ_UpdateFrame_Prepare(self, 0.05)</OnLoad>
    <OnUpdate>PoJ_UpdateFrame_Update(self, elapsed, PoJ_MapMouseCoordString, PoJ_GetMouseCoordString)</OnUpdate>
  </Scripts>
</Frame>


</Ui>
