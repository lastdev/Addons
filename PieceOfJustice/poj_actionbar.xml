<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ C:\Projects\WoW\Bin\Interface\FrameXML\UI.xsd">


<CheckButton name="PoJ_ActionButtonTemplate" inherits="SecureActionButtonTemplate, ActionButtonTemplate" virtual="true">
  <Size><AbsDimension x="30" y="30"/></Size>
  <Frames>
    <Frame name="$parent_BackGround">
      <Size><AbsDimension x="30" y="30"/></Size>
      <Anchors>
        <Anchor point="CENTER"/>
      </Anchors>
      <Layers>
        <Layer level="BACKGROUND">
          <Texture>
            <Color/>
          </Texture>
        </Layer>
      </Layers>
      <Scripts>
        <OnLoad>self:SetFrameLevel(self:GetFrameLevel() - 2)</OnLoad>
      </Scripts>
    </Frame>
  </Frames>
  <NormalTexture name="$parent_NormalTexture" file="Interface\Buttons\UI-Quickslot2">
    <Size><AbsDimension x="54" y="54"/></Size>
    <Anchors>
      <Anchor point="CENTER"><Offset><AbsDimension y="-1"/></Offset></Anchor>
    </Anchors>
  </NormalTexture>
  <Scripts>
    <OnDragStart>PoJ_Drag_Start(PoJ_ActionBarFrame, IsShiftKeyDown())</OnDragStart>
    <OnDragStop>PoJ_ActionBar_SavePos(); PoJ_Drag_Stop(PoJ_ActionBarFrame)</OnDragStop>
    <OnLoad>PoJ_ActionButton_OnLoad(self)</OnLoad>
    <OnEnter>PoJ_ActionBar_ShowTooltip(self)</OnEnter>
    <OnLeave>GameTooltip:Hide()</OnLeave>
    <PostClick>PoJ_ActionButton_OnPostClick(self, button)</PostClick>
    <PreClick>PoJ_ActionButton_OnPreClick(self, button)</PreClick>
  </Scripts>
</CheckButton>


<Frame name="PoJ_ActionBarFrame" parent="UIParent" enableMouse="true" movable="true" framestrata="LOW">
  <Anchors>
    <Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT"><Offset><AbsDimension x="5" y="300"/></Offset></Anchor>
  </Anchors>
  <Frames>
    <CheckButton name="PoJ_ActionBar_Button1" id="1" inherits="PoJ_ActionButtonTemplate">
      <Anchors>
        <Anchor point="TOPLEFT"></Anchor>
      </Anchors>
    </CheckButton>
    <CheckButton name="PoJ_ActionBar_Button2" id="2" inherits="PoJ_ActionButtonTemplate"/>
    <CheckButton name="PoJ_ActionBar_Button3" id="3" inherits="PoJ_ActionButtonTemplate"/>
    <CheckButton name="PoJ_ActionBar_Button4" id="4" inherits="PoJ_ActionButtonTemplate"/>
    <Frame name="PoJ_ActionBar_TargetIdent_DropDown" inherits="UIDropDownMenuTemplate" hidden="true">
      <Scripts>
        <OnLoad>UIDropDownMenu_Initialize(self, PoJ_ActionBar_TargetIdent_DropDown_Initialize, "MENU")</OnLoad>
      </Scripts>
    </Frame>
  </Frames>
</Frame>


</Ui>
