<!-- PoJ object -->

<Frame name="PoJ">
  <Frames>
    <GameTooltip name="PoJ_Tooltip" inherits="GameTooltipTemplate" frameStrata="TOOLTIP" hidden="true" parent="UIParent"/>
  </Frames>
  <Scripts>
    <OnLoad>PoJ_OnLoad()</OnLoad>
    <OnEvent>PoJ_OnEvent(self, event, ...)</OnEvent>
    <OnUpdate>PoJ_OnUpdate(elapsed)</OnUpdate>
  </Scripts>
</Frame>



<!-- MiniMap Icon -->

<Button name="PoJ_Minimap_Icon" frameStrata="LOW" enableMouse="true" parent="Minimap">
  <Size><AbsDimension x="32" y="32"/></Size>
  <Anchors>
    <Anchor point="TOPRIGHT"><Offset><AbsDimension x="16" y="-121"/></Offset></Anchor>
  </Anchors>
  <NormalTexture file="Interface\AddOns\PieceOfJustice\Images\poj_mapicon_up"/>
  <PushedTexture file="Interface\AddOns\PieceOfJustice\Images\poj_mapicon_down"/>
  <HighlightTexture file="Interface\AddOns\PieceOfJustice\Images\poj_mapicon_high" alphaMode="ADD"/>
  <Layers>
    <Layer level="BACKGROUND">
      <Texture file="Interface\Minimap\MiniMap-TrackingBorder">
        <Size><AbsDimension x="50" y="50"/></Size>
        <Anchors>
          <Anchor point="TOPLEFT"/>
        </Anchors>
      </Texture>
    </Layer>
  </Layers>
  <Scripts>
    <OnClick>PoJ_ToggleFrame(PoJ_Options)</OnClick>
    <OnDragStart>if IsShiftKeyDown() then self.drag = true end</OnDragStart>
    <OnDragStop>self.drag = nil</OnDragStop>
    <OnEnter>PoJ_MinimapIcon_SetTooltip()</OnEnter>
    <OnLeave>GameTooltip:Hide()</OnLeave>
    <OnLoad>PoJ_Minimap_Icon:RegisterForDrag("LeftButton")</OnLoad>
    <OnUpdate>PoJ_MinimapIcon_Update(self)</OnUpdate>
  </Scripts>
</Button>



