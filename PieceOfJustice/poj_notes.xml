          <Size><AbsDimension x="287" y="140"/></Size>
          <FontString inherits="GameFontHighlightSmall"/>
          <Scripts>
            <OnEscapePressed>self:ClearFocus()</OnEscapePressed>
            <OnTextChanged>
              PoJ_Notes.NoteChanged = true
              PoJ_NotesScrollFrame:UpdateScrollChildRect()
              local _, max = PoJ_NotesScrollFrameScrollBar:GetMinMaxValues()
              if max ~= 0 and self.max ~= max then
                if PoJ_NotesScrollFrameScrollBar:GetValue() == self.max then
                  PoJ_NotesScrollFrameScrollBar:SetValue(max)
                end
                self.max = max
              end
            </OnTextChanged>
          </Scripts>
        </EditBox>
      </ScrollChild>
    </ScrollFrame>
